<h1>Index Invoices</h1>
<ul>
	<% if @invoices %>
		<% @invoices.each do |invoice| %>
			<li><%= link_to "Référence: #{invoice.invoice_ref}", vehicle_invoice_path(@vehicle,invoice.id) %> <%=invoice.km %>kms <%= invoice.price %>€</li>
		<% end %>
	<% else %>
		<li>Ce vehicule n'a pas de factures pour l'instant</li>
	<% end %>
</ul>
<%= link_to 'Ajouter une facture', new_vehicle_invoice_path %>
