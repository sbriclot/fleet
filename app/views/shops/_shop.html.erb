<h1><%= @action %> un magasin</h1>

<%= simple_form_for(@shop) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :tel %>
  <%= f.input :home_url %>
  <%= f.input :booking_url %>
  <% if @action == "Editer" %>
    <%= f.input :closed %>
  <% end %>
  <%= f.submit @action %>
<% end %>

